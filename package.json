{
  "name": "cloud-orchestration-platform",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "proto:gen": "protoc --plugin=protoc-gen-ts_proto=%CD%\\node_modules\\.bin\\protoc-gen-ts_proto.cmd --ts_proto_out=src/dispatcher/gen --proto_path=./src/dispatcher/protos ./src/dispatcher/protos/*.proto",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": ["cloud", "orchestration", "infrastructure", "automation", "nestjs", "typescript", "mongodb", "distributed-systems"],
  "author": "Stefan Kunde",
  "license": "MIT",
  "description": "High-performance distributed cloud infrastructure orchestration platform with cost-optimized provisioning and billing-aware scheduling",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schedule": "^6.0.0",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dayjs": "^1.11.18",
    "mongoose": "^8.18.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/node": "^24.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
